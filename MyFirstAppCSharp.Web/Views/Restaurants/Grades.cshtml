@model MyFirstAppCSharp.Data.Model.Restaurant

@{
    ViewData["Title"] = "Grade";
}



<h1>Ajout de note et de commentaire</h1>

<h4>Restaurant</h4>
<hr />


<div class="row">
    <div class="col-md-4">

        <form asp-action="Grades">
